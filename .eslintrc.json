{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:json/recommended"
    ],
    "ignorePatterns": [
        "*.json",
        "*.md",
        "*.html",
        "*.ico",
        "*.scss"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "class-methods-use-this": "warn",
        "comma-dangle": [
            "error",
            {
                "arrays": "never",
                "objects": "always",
                "imports": "never",
                "exports": "never",
                "functions": "never"
            }
        ],
        "global-require": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never"
            }
        ],
        "implicit-arrow-linebreak": "off",
        "import/prefer-default-export": "off",
        "indent": [
            "error",
            4
        ],
        "lines-between-class-members": "off",
        "linebreak-style": "off",
        "max-len": [
            "warn",
            120
        ],
        "no-console": "off",
        "no-empty-function": ["warn", {"allow": ["constructors"]}],
        "no-plusplus": "off",
        "no-unused-vars": "warn",
        "no-useless-constructor": "off",
        "padded-blocks": "off",
        "semi": [
            "error",
            "never"
        ],
        "spaced-comment": [
            "error",
            "always",
            {
                "exceptions": [
                    "-"
                ]
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    }
}